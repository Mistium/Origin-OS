  )
  icon "w 3 line 0 -8 0 8" 0.7 : chx#20 c#seco
  c txtc
  change -10
  if selected_files.len != 1 (
    files_buttons = []
  ) else (
    file_open = selected_files[1]
    file "open" file_open "onlyaccess"
    file "get" 13
