files_path = "Origin/(C) Users/" ++ username
user_path = files_path ++ "/"

hidden = []
tabs = []
current_tab = 1
input_path = files_path.destr
files = []
selected_files = []
drag_id = 0

sorting_mode = "name"
sorting_dir = "descending"

dta = ""
