files = open(terminal.pwd ++ ".folder")

files @= files.map(f -> (open(f, ["name", "type"]).join(".")))

if args.contains("-a").not() (
  files @= files.filter(v -> (v[1] != ":"))
)

void files.map(def(v) -> (
  local ov = v
  if ov.endsWith(".folder") (
    ov = ov.trim(1, -9) ++ "/"
    v = [global_accent, ov]
  )
  if ov[1] == ":" (
    v = ["#aaa", ov]
  )
  terminal.writeLine(v)
  return
))