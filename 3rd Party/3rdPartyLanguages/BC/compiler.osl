
def "animate"
goto -100 0
icon "c #fff cutcircle 0 0 10" + ( local / 50 ) + "90" 2
loadpos = -50 - sizeload
goto loadpos 0
if local > 1500 (
  sizeload += 0.2
  text "BetterCode" sizeload
) else (
  text "BetterCode is loading.." 10
)
endef

def "compile"
console = [] + "> Successfully loaded console (v0.1)".destr
console = console + "> fixed the bug and i have more lines".destr

code = "input bc code here".ask

splitter = "/\'[^\']+\'|(?<=\()[^)]+(?=\))|[^ \n()%;]+|[()]|%[^%]*%|;/gm"

code = code.regex(splitter)
loop code.len (
  pass = ""
  count += 1
  cur = code.[count]
  last = cur.len

  count2 = count + 1
  next = code.[count2]
  count2 += 1
  next2 = code.[count2]

  if cur.[1] == "%" and ( cur.[last] == "%" ) (
    cur = ""
  )
  if cur === "console".destr and ( next == "(" ) (
    if next2.contains("'") (
       next2 = next2.replace("'","").str
    )
    pass = "say " + next2.str
    pass = pass.destr
    count += 1
  )
  if cur === "end".destr (
    pass = ")"
  )
  if cur === "return".destr (
    pass = "endef"
  )
  if pass != "" (
    console = console + pass
  )
)
compiled = true
endef

window "show"
compiled = false
x = 0
sizeload = 10
open_timestamp = timestamp
// setup

mainloop:
local = timestamp - open_timestamp
if local < 3000 (
  animate
  exit
  // exits the program at this point
)
if compiled.not (
  compile
)

c #fff
loc 2 2 20 -20
text "BetterCode Console" 10

loc 2 2 20 -40
text console.join(newline) 10

import "win-buttons"
